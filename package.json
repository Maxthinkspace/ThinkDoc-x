{
  "name": "office-addin-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "Office Add-in with integrated frontend and backend",
  "scripts": {
    "dev": "concurrently \"pnpm --filter frontend dev-server\" \"pnpm --filter backend dev\"",
    "build": "pnpm --filter frontend build && pnpm --filter backend build",
    "start": "concurrently \"pnpm --filter frontend start\" \"pnpm --filter backend start\"",
    "stop": "pnpm --filter frontend stop",
    "lint": "pnpm --filter \"*\" lint",
    "test": "pnpm --filter backend test",
    "typecheck": "pnpm --filter \"*\" typecheck",
    "clean": "pnpm --filter \"*\" clean && rimraf node_modules",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "concurrently": "^9.2.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.4.2"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "biome check --apply"
    ]
  },
  "pnpm": {
    "overrides": {
      "@types/node": "^22.7.4"
    },
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67",
  "dependencies": {
    "crypto": "^1.0.1",
    "es6-promise": "^4.2.8",
    "exceljs": "^4.4.0",
    "xlsx": "^0.18.5"
  }
}
