{
  "name": "office-addin-backend",
  "version": "1.0.0",
  "description": "Backend API server for Office Add-in with Hono, PostgreSQL, and Drizzle",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "dev:secure": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsdown",
    "build:esbuild": "node build.mjs",
    "start": "node dist/index.js",
    "preview": "pnpm build && pnpm start",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:migrate:004": "tsx scripts/run-migration-004.ts",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:reset": "tsx src/scripts/reset.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:llm": "tsx src/examples/robust-llm-example.ts",
    "clean": "rimraf dist .turbo",
    "docker:build": "docker build -t office-addin-backend .",
    "docker:run": "docker run -p 3003:3003 office-addin-backend",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "prepare": "husky install"
  },
  "keywords": [
    "hono",
    "postgresql",
    "drizzle",
    "typescript",
    "api",
    "office-addin",
    "docker",
    "kubernetes"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.15",
    "@supabase/supabase-js": "^2.49.2",
    "@ai-sdk/google": "^2.0.13",
    "@ai-sdk/openai": "^2.0.28",
    "@hono/node-server": "^1.19.2",
    "@hono/zod-openapi": "^1.1.0",
    "@hono/zod-validator": "^0.7.2",
    "@openrouter/ai-sdk-provider": "^1.2.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@scalar/hono-api-reference": "^0.9.18",
    "@types/uuid": "^10.0.0",
    "@xmldom/xmldom": "^0.8.11",
    "ai": "^5.0.40",
    "bcryptjs": "^3.0.2",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.6",
    "jsonrepair": "^3.13.0",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "mkcert": "^3.2.0",
    "nanoid": "^5.1.5",
    "ollama-ai-provider": "^1.2.0",
    "openai": "^6.15.0",
    "pdf-parse": "^2.4.5",
    "pdfkit": "^0.17.2",
    "pino": "^9.9.5",
    "pino-pretty": "^13.1.1",
    "postgres": "^3.4.7",
    "resend": "^6.8.0",
    "stripe": "^20.0.0",
    "uuid": "^13.0.0",
    "word-extractor": "^1.0.4",
    "zod": "^4.1.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pdf-parse": "^1.1.5",
    "@types/pdfkit": "^0.17.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.25.9",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "rimraf": "^6.0.1",
    "tsdown": "^0.15.0",
    "tsx": "^4.20.5",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "biome check --apply"
    ]
  },
  "pnpm": {
    "overrides": {
      "@types/node": "^22.7.4"
    },
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
